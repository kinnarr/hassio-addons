{
  "name": "HomeMatic OCCU (Lan Gateway support)",
  "version": "2.0.3",
  "slug": "homematic",
  "description": "HomeMatic central based on OCCU",
  "url": "https://github.com/kinnarr/hassio-addons/tree/master/homematic",
  "arch": ["armhf", "i386", "amd64"],
  "startup": "system",
  "boot": "auto",
  "auto_uart": false,
  "gpio": false,
  "apparmor": false,
  "ports": {
    "2001/tcp": 2001,
    "2000/tcp": 2000
  },
  "options": {
    "rf_enable": true,
    "rf": [
      {
        "type": "Lan Interface",
        "serial": "xy",
        "key": "abc"
      }
    ],
    "wired_enable": false,
    "wired": [
      {
        "serial": "xy",
        "key": "abc",
        "ip": "192.168.0.0"
      }
    ]
  },
  "schema": {
    "rf_enable": "bool",
    "rf": [
      {
        "type": "match(Lan Interface)",
        "serial": "str",
        "key": "str"
      }
    ],
    "wired_enable": "bool",
    "wired": [
      {
        "serial": "str",
        "key": "str",
        "ip": "str"
      }
    ]
  }
}
